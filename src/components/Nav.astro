<div class="nav-shield"></div>
<div class="fixed top-0 left-0 right-0 z-[9999] flex justify-center pt-5 px-4" style="isolation: isolate;">
  <nav class="nav-pill">
    <a href="#" class="nav-logo" id="logo-link">
      <span class="nav-border"></span>
      <span class="nav-text">RZ</span>
    </a>
  </nav>
</div>

<style>
  .nav-shield {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 5rem;
    background: linear-gradient(to bottom, #0f0f0f 60%, transparent);
    z-index: 9998;
    pointer-events: none;
  }

  @keyframes trace {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  .nav-pill {
    background: #141414;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 2rem;
    padding: 0.3rem;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.5);
  }

  .nav-logo {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    text-decoration: none;
    transition: transform 0.3s ease;
    overflow: hidden;
  }

  .nav-border {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    padding: 1.5px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.03) 20%,
      rgba(255, 255, 255, 0.5) 50%,
      rgba(255, 255, 255, 0.03) 80%,
      transparent 100%
    );
    background-size: 200% 100%;
    animation: trace 3s linear infinite;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .nav-text {
    position: relative;
    z-index: 1;
    font-weight: 600;
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    color: #666;
    transition: color 0.3s ease;
  }

  .nav-logo::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: #141414;
    z-index: 0;
  }

  .nav-logo:hover {
    transform: scale(1.1);
  }

  .nav-logo:hover .nav-text {
    color: #999;
  }

  .nav-logo:hover .nav-border {
    animation-duration: 1.5s;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.05) 20%,
      rgba(255, 255, 255, 0.7) 50%,
      rgba(255, 255, 255, 0.05) 80%,
      transparent 100%
    );
    background-size: 200% 100%;
  }
</style>

<script>
  document.getElementById('logo-link')?.addEventListener('click', (e) => {
    e.preventDefault();
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
