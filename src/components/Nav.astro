<div class="fixed top-0 left-0 right-0 z-50 flex justify-center pt-5 px-4">
  <nav class="nav-bar">
    <a href="/" class="nav-logo-wrapper">
      <span class="nav-logo-border"></span>
      <span class="nav-logo-glow"></span>
      <span class="nav-logo-content">RZ</span>
    </a>
  </nav>
</div>

<style>
  @keyframes liquid-gold {
    0% {
      background-position: 0% 50%;
      filter: hue-rotate(0deg);
    }
    25% {
      filter: hue-rotate(-5deg) brightness(1.1);
    }
    50% {
      background-position: 100% 50%;
      filter: hue-rotate(0deg);
    }
    75% {
      filter: hue-rotate(5deg) brightness(1.1);
    }
    100% {
      background-position: 0% 50%;
      filter: hue-rotate(0deg);
    }
  }

  @keyframes glow-pulse {
    0%, 100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.7;
    }
  }

  .nav-bar {
    background: linear-gradient(145deg, #1a1a1a, #0e0e0e);
    border: 1px solid rgba(255, 255, 255, 0.04);
    border-radius: 1.125rem;
    padding: 0.4rem;
    box-shadow:
      0 4px 30px rgba(0, 0, 0, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.03);
  }

  .nav-logo-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: 0.875rem;
    text-decoration: none;
    transition: all 0.4s ease;
  }

  .nav-logo-border {
    position: absolute;
    inset: 0;
    border-radius: 0.875rem;
    padding: 3.5px;
    background: linear-gradient(
      var(--angle, 130deg),
      #5c3d0a,
      #7a5a0a,
      #a07618,
      #c49a2c,
      #ddb740,
      #f0d060,
      #ffe88a,
      #fffbe0,
      #ffe88a,
      #f0d060,
      #ddb740,
      #c49a2c,
      #a07618,
      #7a5a0a,
      #5c3d0a,
      #7a5a0a,
      #c49a2c,
      #ffe88a
    );
    background-size: 400% 400%;
    animation: liquid-gold 3s ease infinite;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .nav-logo-glow {
    position: absolute;
    inset: -6px;
    border-radius: 1.1rem;
    background: linear-gradient(
      130deg,
      transparent 20%,
      rgba(212, 160, 32, 0.15) 40%,
      rgba(255, 232, 138, 0.1) 50%,
      rgba(212, 160, 32, 0.15) 60%,
      transparent 80%
    );
    background-size: 400% 400%;
    animation:
      liquid-gold 3s ease infinite,
      glow-pulse 3s ease infinite;
    filter: blur(8px);
    pointer-events: none;
  }

  .nav-logo-content {
    position: relative;
    z-index: 1;
    font-weight: 700;
    font-size: 0.85rem;
    letter-spacing: 0.06em;
    background: linear-gradient(
      160deg,
      #a07618,
      #d4a020,
      #f0d060,
      #d4a020,
      #a07618
    );
    background-size: 200% 200%;
    animation: liquid-gold 3s ease infinite;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .nav-logo-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 0.875rem;
    background: linear-gradient(145deg, #1a1a1a, #0f0f0f);
    z-index: 0;
  }

  .nav-logo-wrapper:hover .nav-logo-border {
    animation-duration: 1.5s;
    padding: 4px;
  }

  .nav-logo-wrapper:hover .nav-logo-glow {
    animation-duration: 1.5s;
    inset: -10px;
    filter: blur(12px);
    opacity: 1;
  }

  .nav-logo-wrapper:hover .nav-logo-content {
    animation-duration: 1.5s;
  }

  .nav-logo-wrapper:hover {
    box-shadow: 0 0 30px rgba(184, 134, 11, 0.25);
    transform: scale(1.05);
  }
</style>
