---
interface Props {
  title: string;
  description: string;
  href: string;
  size?: 'sm' | 'md' | 'lg';
}

const { title, description, href, size = 'md' } = Astro.props;

const binary = title.split('').map(c => c.charCodeAt(0).toString(2).padStart(8, '0')).join(' ');

const sizeClasses = {
  sm: 'col-span-1 row-span-1',
  md: 'col-span-1 row-span-1 sm:col-span-1',
  lg: 'col-span-1 sm:col-span-2 row-span-1',
};
---

<a href={href} target="_blank" rel="noopener noreferrer" class:list={['glass-panel group', sizeClasses[size]]}>
  <div class="panel-glow"></div>
  <div class="panel-content">
    <div class="panel-binary">{binary}</div>
    <h3 class="panel-title">{title}</h3>
    <p class="panel-desc">{description}</p>
    <span class="panel-peek">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
      </svg>
    </span>
  </div>
</a>

<style>
  .glass-panel {
    position: relative;
    overflow: hidden;
    border-radius: 1.25rem;
    background: linear-gradient(145deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
    border: 1px solid rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    padding: 2rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    display: block;
    min-height: 200px;
  }

  .glass-panel:hover {
    border-color: rgba(184, 134, 11, 0.2);
    transform: translateY(-4px) scale(1.01);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 30px rgba(184, 134, 11, 0.06);
  }

  .panel-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at 30% 30%,
      rgba(184, 134, 11, 0.04) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .glass-panel:hover .panel-glow {
    opacity: 1;
  }

  .panel-content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .panel-binary {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.55rem;
    letter-spacing: 0.05em;
    color: #333;
    margin-bottom: 1rem;
    line-height: 1.4;
    word-break: break-all;
    transition: color 0.4s ease;
  }

  .glass-panel:hover .panel-binary {
    color: rgba(184, 134, 11, 0.35);
  }

  .panel-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #e5e5e5;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }

  .glass-panel:hover .panel-title {
    color: var(--color-gold-light);
  }

  .panel-desc {
    font-size: 0.8125rem;
    color: #737373;
    line-height: 1.6;
    flex: 1;
  }

  .panel-peek {
    position: absolute;
    top: 1.5rem;
    right: 0;
    color: #525252;
    opacity: 0;
    transform: translateX(-4px);
    transition: all 0.3s ease;
  }

  .glass-panel:hover .panel-peek {
    opacity: 1;
    transform: translateX(0);
  }
</style>
