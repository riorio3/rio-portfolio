---
interface Props {
  title: string;
  description: string;
  href: string;
  size?: 'sm' | 'md' | 'lg';
}

const { title, description, href, size = 'md' } = Astro.props;

const binary = title.split('').map(c => c.charCodeAt(0).toString(2).padStart(8, '0')).join(' ');

const sizeClasses = {
  sm: 'col-span-1 row-span-1',
  md: 'col-span-1 row-span-1 sm:col-span-1',
  lg: 'col-span-1 sm:col-span-2 row-span-1',
};
---

<a href={href} target="_blank" rel="noopener noreferrer" class:list={['glass-panel group', sizeClasses[size]]} data-tilt>
  <div class="panel-glow"></div>
  <div class="panel-spotlight"></div>
  <div class="panel-content">
    <div class="panel-binary">{binary}</div>
    <h3 class="panel-title">{title}</h3>
    <p class="panel-desc">{description}</p>
  </div>
</a>

<style>
  .glass-panel {
    position: relative;
    z-index: 0;
    overflow: hidden;
    border-radius: 1.25rem;
    background: linear-gradient(145deg, rgba(255,255,255,0.05), rgba(255,255,255,0.02));
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    padding: 2rem;
    transition: transform 0.15s ease-out, box-shadow 0.4s ease, border-color 0.4s ease;
    transform-style: preserve-3d;
    perspective: 800px;
    text-decoration: none;
    display: block;
    min-height: 200px;
    will-change: transform;
  }

  .glass-panel:hover {
    border-color: rgba(59, 130, 246, 0.2);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 30px rgba(59, 130, 246, 0.06);
  }

  .panel-spotlight {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 0;
    border-radius: 1.25rem;
  }

  .glass-panel:hover .panel-spotlight {
    opacity: 1;
  }

  .panel-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at 30% 30%,
      rgba(59, 130, 246, 0.04) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .glass-panel:hover .panel-glow {
    opacity: 1;
  }

  .panel-content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .panel-binary {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.55rem;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.25);
    margin-bottom: 1rem;
    line-height: 1.4;
    word-break: break-all;
    transition: color 0.4s ease;
  }

  .glass-panel:hover .panel-binary {
    color: rgba(255, 255, 255, 0.45);
  }

  .panel-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }

  .glass-panel:hover .panel-title {
    color: var(--color-gold-light);
  }

  .panel-desc {
    font-size: 0.8125rem;
    color: #888888;
    line-height: 1.6;
    flex: 1;
  }

</style>
